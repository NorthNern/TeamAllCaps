<div class="container" id="give-badge-page">
		<div class="row">
			<div class="col s12 center-align" id="title">
			    <h2 id="give-header">Give a Badge!</h2>
			</div>
		</div>

		<div class="row">
		<form id="badge-form" class="col s12">
    		<div class="col s12">
     	 		<div class="row">
        			<div class="input-field col s12">
          				<input type="text" id="autocomplete-input" class="autocomplete" autocomplete="off">
          				<label for="autocomplete-input">Recipient's Name</label>
        			</div>
      			</div>
    		</div>
  		</div>

				<div class="row">
					<div class="col s5 offset-s1 m3">

						<label>
							<input class="with-gap" name ="badge-group" value="crown" type="radio" id="badge4"/>
							<img src="../assets/images/badges/crown.svg">
						</label>
					</div>


					<div class="col s5 m3">

						<label>
							<input class="with-gap" name ="badge-group" value="lightbulb" type="radio" id="badge4"/>
							<img src="../assets/images/badges/lightbulb.svg">
						</label>
					</div>

		
					<div class="col s5 offset-s1 m3">

						<label>
							<input class="with-gap" name ="badge-group" value="trophy" type="radio" id="badge4"/>
							<img src="../assets/images/badges/trophy.svg">
						</label>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s12">
						<textarea id="comment" class="materialize-textarea" name="comment"></textarea>
						<label for="textarea">Write a Nice Message!</label>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s4 offset-s4 center-align">
						<button class="waves-effect waves-light btn" type="submit" id="give-badge-submit">SEND</button>
					</div>
				</div>
			</form>
		</div>	
	</div>
	